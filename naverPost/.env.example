# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# 네이버 계정 정보
NAVER_USERNAME=your_naver_username
NAVER_PASSWORD=your_naver_password
NAVER_BLOG_URL=https://blog.naver.com/your_blog_id

# 웹 서버 설정
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DEBUG=true

# 경로 설정
DATA_DIR=./data
UPLOADS_DIR=./uploads
TEMPLATES_DIR=./templates

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=./logs/naverpost.log

# API 호출 안정성 설정
API_TIMEOUT=30.0
API_MAX_RETRIES=3
API_RETRY_DELAY=1.0

# 파일 처리 설정
MAX_FILE_SIZE_MB=50
MAX_IMAGES_PER_POST=10

# 블로그 콘텐츠 설정
MIN_CONTENT_LENGTH=1000
MAX_CONTENT_LENGTH=2000
TARGET_KEYWORD_DENSITY=0.015
MIN_PERSONAL_EXPERIENCE_RATIO=0.6

# 품질 검증 설정
MIN_QUALITY_SCORE=70.0
MIN_NAVER_COMPLIANCE_SCORE=80.0
QUALITY_RULES_FILE=./config/quality_rules.yml

# Selenium 설정
SELENIUM_HEADLESS=true
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30

# 자동화 안전성 설정
POST_ACTION_DELAY=2.0
LOGIN_RETRY_COUNT=3
LOGIN_RETRY_DELAY=5.0