{
  "name": "naver-poster",
  "version": "1.0.0",
  "description": "네이버 블로그 임시저장 자동화 (Playwright 기반)",
  "main": "dist/cli/post_to_naver.js",
  "bin": {
    "naver-post": "dist/cli/post_to_naver.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:telegram": "node dist/telegram/index.js",
    "post": "node dist/cli/post_to_naver.js",
    "login": "node dist/cli/post_to_naver.js --interactiveLogin",
    "worker": "node dist/cli/worker.js --headless --poll=15",
    "worker:resume": "node dist/cli/worker.js --headless --resume --once",
    "restart:telegram": "node etc_scripts/restart_telegram.js",
    "restart:all": "bash etc_scripts/restart_all_process.sh",
    "check:proc": "bash etc_scripts/check_process.sh",
    "logs:today": "node etc_scripts/tail_today_logs.js",
    "check": "node dist/cli/post_to_naver.js --dryRun",
    "verify:flow": "node dist/cli/post_to_naver.js --verifyFlow",
    "auth:save-state": "node etc_scripts/auth_save_state.js",
    "post:upload": "node etc_scripts/post_upload.js",
    "test:draft-save": "bash ./test_scripts/test_draft_save.sh",
    "test:temp-save:unit": "jest --config jest.config.js --runInBand test_scripts/unit/temp_save_state_machine.test.ts",
    "test:temp-save:integration": "npx --no-install tsx test_scripts/integration/test_temp_save_samples.ts",
    "test:unit": "jest --config jest.config.js --runInBand test_scripts/unit",
    "test:integration": "jest --config jest.config.js --runInBand test_scripts/integration",
    "test:e2e": "jest --config jest.config.js --runInBand test_scripts/e2e",
    "test:all": "npm run test:unit && npm run test:integration",
    "gate": "npm run build && npm run test:all && npm run verify:flow && npm run test:e2e",
    "smoke:draft-images": "bash ./test_scripts/smoke_test_post_draft_with_images.sh",
    "fixtures:text-input": "node test_scripts/tools/generate_text_input_fixtures.js",
    "test": "jest --config jest.config.js --runInBand test_scripts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "commander": "^12.0.0",
    "dotenv": "^16.3.0",
    "exifr": "^7.1.3"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0"
  }
}
